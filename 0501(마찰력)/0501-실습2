from vpython import *

ground = box(pos=vec(0, 0, 0), size=vec(50, 1, 5), color=color.green)

rain = sphere(pos=vec(0, 100, 0), radius=1)
rain.v = vec(0, 0, 0)
rain.m = 5e-7

g = vec(0, -9.8, 0)

rain.a = g

rainPos = graph(title='rain Velocity', xtitle='t', ytitle='V')
raingp = gcurve(color=color.red, graph=rainPos)

t = 0
dt = 0.001

while(rain.pos.y > ground.pos.y):
    rate(1/dt)
    rain.v += rain.a*dt
    rain.pos += rain.v*dt

    raingp.plot(pos=(t, abs(rain.v.y)))

    t += dt
